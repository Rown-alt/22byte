<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="play_button">
        <item name="android:backgroundTint">#EE5B11</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="start_textView">
        <item name="android:textColor">#8BACFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="round_answer">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="book_textView">
        <item name="android:textColor">#8BACFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
